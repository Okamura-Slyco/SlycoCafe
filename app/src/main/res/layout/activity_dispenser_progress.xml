<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom|center_horizontal"
    android:backgroundTint="@color/white"
    android:backgroundTintMode="add"
    android:foregroundTint="@color/white"
    android:foregroundTintMode="add"
    tools:context=".DispenserProgress">


    <TextView
        android:id="@+id/obrigadoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bom cafÃ©! Obrigado!"
        android:textSize="34sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBrasilOrganic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-150dp"
        android:alpha="1"
        app:layout_constraintStart_toEndOf="@id/imgRistretto"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brasil_organic_trn" />

    <ImageView
        android:id="@+id/imgCaffeVanilio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-330dp"
        android:layout_marginTop="-150dp"
        android:alpha="1"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/caffe_vanilio_trn" />

    <ImageView
        android:id="@+id/imgDescafeinado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-250dp"
        android:layout_marginTop="-150dp"
        android:alpha="1"
        app:layout_constraintStart_toEndOf="@id/imgLeggero"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/descafeinado_trn" />

    <ImageView
        android:id="@+id/imgIndia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-150dp"
        android:layout_marginStart="-200dp"
        android:alpha="1"
        app:layout_constraintStart_toEndOf="@id/imgDescafeinado"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/india_trn" />

    <ImageView
        android:id="@+id/imgRistretto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="-150dp"
        android:alpha="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ristretto_trn" />

    <ImageView
        android:id="@+id/imgLeggero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="-150dp"
        android:alpha="1"
        app:layout_constraintStart_toEndOf="@id/imgBrasilOrganic"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/leggero_trn" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="839dp"
        android:layout_height="77dp"
        android:layout_marginBottom="10dp"
        android:backgroundTintMode="add"
        android:foregroundTint="#228800"
        android:foregroundTintMode="src_atop"
        android:indeterminateTint="#228800"
        android:indeterminateTintMode="src_atop"
        android:max="100"
        android:progress="50"
        android:progressBackgroundTint="#AAAAAA"
        android:progressBackgroundTintMode="src_atop"
        android:progressTint="#228800"
        android:progressTintMode="src_atop"
        android:scaleY="4"
        android:secondaryProgressTint="#228800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>