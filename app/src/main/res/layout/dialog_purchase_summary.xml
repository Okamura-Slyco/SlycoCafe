    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    android:backgroundTintMode="screen">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chunk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewDialog1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/brasil_organic_trn" />

            <TextView
                android:id="@+id/xTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="5dp"
                android:text="x"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewDialog1"
                app:layout_constraintStart_toEndOf="@+id/imageViewDialog1"
                app:layout_constraintTop_toTopOf="@+id/imageViewDialog1" />

            <TextView
                android:id="@+id/qtyTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="50"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/xTextView1"
                app:layout_constraintStart_toEndOf="@+id/xTextView1"
                app:layout_constraintTop_toTopOf="@+id/xTextView1" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frameLayout2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@id/frameLayout1"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewDialog2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/brasil_organic_trn" />

            <TextView
                android:id="@+id/xTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

